{
  "name": "mcp-video-editor",
  "version": "0.1.0",
  "description": "MCP server for video editing operations",
  "type": "module",
  "bin": {
    "mcp-video-editor": "./build/index.js"
  },
  "scripts": {
    "build": "tsc",
    "watch": "tsc --watch",
    "prepare": "npm run build",
    "test:generate": "node build/test/generate-test-video.js",
    "test:run": "node build/test/test-mcp-client.js",
    "test:transcript": "node build/test/test-transcript.js",
    "test:new": "node build/test/test-new-features.js",
    "test": "npm run test:generate && npm run test:run",
    "test:all": "npm run test:generate && npm run test:run && npm run test:transcript && npm run test:new",
    "inspector": "npx @modelcontextprotocol/inspector node build/index.js"
  },
  "keywords": ["mcp", "video", "editing", "ffmpeg"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.0.4",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "fluent-ffmpeg": "^2.1.3",
    "openai": "^4.76.1"
  },
  "devDependencies": {
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/node": "^20.11.0",
    "typescript": "^5.3.3"
  }
}
